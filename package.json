{
  "name": "space-invaders-js-v115",
  "version": "1.15.0",
  "description": "A modern HTML5 Canvas Space Invaders game with advanced features, AI enemies, and immersive audio-visual effects",
  "main": "index.html",
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "start": "npm run serve",
    "serve": "npx http-server . -p 8080 -c-1 --cors",
    "serve:dev": "npx http-server . -p 3000 -c-1 --cors -o",
    "build": "npm run lint && npm run test && npm run optimize",
    "build:prod": "npm run build && npm run minify && npm run compress",
    "test": "jest --coverage --verbose",
    "test:watch": "jest --watch --coverage",
    "test:e2e": "playwright test",
    "test:performance": "jest --testPathPattern=performance --runInBand",
    "test:integration": "jest --testPathPattern=integration --runInBand",
    "test:cross-platform": "jest --testPathPattern=cross-platform",
    "test:regression": "jest --testPathPattern=regression",
    "test:all": "npm run test && npm run test:e2e && npm run test:performance",
    "lint": "eslint js/ tests/ --ext .js --fix",
    "lint:check": "eslint js/ tests/ --ext .js",
    "format": "prettier --write \"**/*.{js,json,md,css,html}\"",
    "format:check": "prettier --check \"**/*.{js,json,md,css,html}\"",
    "optimize": "node scripts/optimize-assets.js",
    "minify": "terser js/**/*.js --compress --mangle --output dist/game.min.js",
    "compress": "gzip -9 -c dist/game.min.js > dist/game.min.js.gz",
    "deploy": "node scripts/deploy.js",
    "deploy:prod": "npm run build:prod && node scripts/deploy.js --env=production",
    "rollback": "node scripts/rollback.js",
    "health-check": "node scripts/health-check.js",
    "lighthouse": "lighthouse http://localhost:8080 --config-path=lighthouse.config.js --output=html --output-path=reports/lighthouse.html",
    "audit": "npm audit --audit-level=moderate",
    "audit:fix": "npm audit fix",
    "security": "npm run audit && npx retire --path .",
    "precommit": "npm run lint && npm run test",
    "prepush": "npm run build && npm run test:e2e",
    "postinstall": "npm run security",
    "clean": "rm -rf node_modules dist reports coverage .nyc_output",
    "reset": "npm run clean && npm install",
    "dev": "concurrently \"npm run serve:dev\" \"npm run test:watch\"",
    "monitor": "node js/monitoring/healthChecker.js",
    "benchmark": "node tests/performance/collision-benchmark.test.js"
  },
  "keywords": [
    "space-invaders",
    "html5-game",
    "canvas",
    "javascript",
    "game-development",
    "arcade",
    "retro",
    "browser-game",
    "web-game",
    "2d-game"
  ],
  "author": {
    "name": "Space Invaders Development Team",
    "email": "dev@spaceinvaders.game",
    "url": "https://github.com/spaceinvaders/js-v115"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/spaceinvaders/js-v115.git"
  },
  "bugs": {
    "url": "https://github.com/spaceinvaders/js-v115/issues"
  },
  "homepage": "https://spaceinvaders.game",
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@eslint/js": "^9.0.0",
    "@playwright/test": "^1.40.0",
    "@types/jest": "^29.5.0",
    "babel-jest": "^29.7.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-security": "^1.7.1",
    "http-server": "^14.1.1",
    "jest": "^29.7.0",
    "jest-canvas-mock": "^2.5.0",
    "jest-environment-jsdom": "^29.7.0",
    "lighthouse": "^11.4.0",
    "prettier": "^3.1.0",
    "retire": "^4.0.0",
    "terser": "^5.24.0"
  },
  "dependencies": {
    "canvas": "^2.11.2",
    "jsdom": "^23.0.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "jest-canvas-mock"
    ],
    "collectCoverageFrom": [
      "js/**/*.js",
      "!js/**/*.test.js",
      "!js/config/**/*.js",
      "!js/monitoring/**/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "moduleFileExtensions": [
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "testTimeout": 10000,
    "maxWorkers": "50%"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "18",
            "browsers": [
              "> 1%",
              "last 2 versions",
              "not dead"
            ]
          },
          "modules": "auto"
        }
      ]
    ]
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie <= 11"
  ],
  "files": [
    "js/",
    "css/",
    "assets/",
    "index.html",
    "README.md",
    "LICENSE"
  ],
  "directories": {
    "test": "tests",
    "doc": "docs"
  },
  "config": {
    "port": 8080,
    "host": "localhost",
    "ssl": false
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/spaceinvaders"
  },
  "volta": {
    "node": "18.19.0",
    "npm": "10.2.3"
  }
}