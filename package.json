{
  "name": "space-invaders-js-v115",
  "version": "1.15.0",
  "description": "A modern HTML5 Canvas Space Invaders game with advanced features and cross-platform support",
  "main": "js/game.js",
  "type": "module",
  "keywords": [
    "game",
    "space-invaders",
    "html5",
    "canvas",
    "javascript",
    "arcade",
    "retro",
    "browser-game"
  ],
  "author": {
    "name": "Space Invaders Development Team",
    "email": "dev@spaceinvaders.game"
  },
  "license": "MIT",
  "homepage": "https://spaceinvaders.game",
  "repository": {
    "type": "git",
    "url": "https://github.com/spaceinvaders/space-invaders-js-v115.git"
  },
  "bugs": {
    "url": "https://github.com/spaceinvaders/space-invaders-js-v115/issues"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie <= 11"
  ],
  "scripts": {
    "start": "npm run serve",
    "serve": "http-server -p 8080 -c-1 --cors -o",
    "serve:dev": "http-server -p 3000 -c-1 --cors -o -S -C cert.pem -K key.pem",
    "build": "npm run build:clean && npm run build:assets && npm run build:optimize",
    "build:clean": "rimraf dist",
    "build:assets": "npm run build:css && npm run build:js",
    "build:css": "postcss css/styles.css -o dist/css/styles.min.css --map",
    "build:js": "rollup -c rollup.config.js",
    "build:optimize": "npm run optimize:images && npm run optimize:audio",
    "optimize:images": "imagemin assets/sprites/*.png --out-dir=dist/assets/sprites --plugin=pngquant",
    "optimize:audio": "node scripts/optimize-audio.js",
    "test": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:unit": "jest --config=jest.config.unit.js --coverage",
    "test:integration": "jest --config=jest.config.integration.js",
    "test:e2e": "playwright test",
    "test:watch": "jest --watch --config=jest.config.unit.js",
    "test:coverage": "jest --coverage --config=jest.config.unit.js && open coverage/lcov-report/index.html",
    "test:performance": "jest --config=jest.config.performance.js",
    "test:cross-platform": "npm run test:browsers && npm run test:mobile",
    "test:browsers": "playwright test --config=playwright.browsers.config.js",
    "test:mobile": "playwright test --config=playwright.mobile.config.js",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint js/ tests/ --ext .js --fix",
    "lint:css": "stylelint css/*.css --fix",
    "lint:check": "npm run lint:js -- --max-warnings 0 && npm run lint:css -- --max-warnings 0",
    "format": "prettier --write \"**/*.{js,css,html,md,json}\"",
    "format:check": "prettier --check \"**/*.{js,css,html,md,json}\"",
    "validate": "npm run lint:check && npm run format:check && npm run test",
    "security": "npm audit && npm run security:snyk",
    "security:snyk": "snyk test",
    "security:fix": "npm audit fix",
    "performance": "npm run performance:lighthouse && npm run performance:bundle",
    "performance:lighthouse": "lighthouse http://localhost:8080 --output=html --output-path=reports/lighthouse.html",
    "performance:bundle": "bundlesize",
    "performance:profile": "node --prof js/game.js",
    "deploy": "npm run build && npm run deploy:staging",
    "deploy:staging": "gh-pages -d dist -r origin -b staging",
    "deploy:production": "npm run validate && npm run build && gh-pages -d dist",
    "health": "node scripts/health-check.js",
    "monitor": "node scripts/monitor.js",
    "docs": "jsdoc js/ -r -d docs/api",
    "docs:serve": "http-server docs -p 8081 -o",
    "clean": "rimraf dist coverage reports .nyc_output node_modules/.cache",
    "reset": "npm run clean && npm install",
    "precommit": "lint-staged",
    "prepush": "npm run validate",
    "postinstall": "npm run setup:hooks",
    "setup:hooks": "husky install",
    "setup:dev": "npm install && npm run setup:hooks && npm run build:dev-certs",
    "build:dev-certs": "mkcert localhost 127.0.0.1 ::1"
  },
  "dependencies": {
    "canvas": "^2.11.2",
    "howler": "^2.2.4"
  },
  "devDependencies": {
    "@babel/core": "^7.23.6",
    "@babel/preset-env": "^7.23.6",
    "@eslint/js": "^8.56.0",
    "@playwright/test": "^1.40.1",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "autoprefixer": "^10.4.16",
    "bundlesize": "^0.18.1",
    "cssnano": "^6.0.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^27.6.0",
    "gh-pages": "^6.1.0",
    "http-server": "^14.1.1",
    "husky": "^8.0.3",
    "imagemin": "^8.0.1",
    "imagemin-pngquant": "^9.0.2",
    "jest": "^29.7.0",
    "jest-canvas-mock": "^2.5.2",
    "jest-environment-jsdom": "^29.7.0",
    "jsdoc": "^4.0.2",
    "lighthouse": "^11.4.0",
    "lint-staged": "^15.2.0",
    "mkcert": "^3.2.0",
    "postcss": "^8.4.32",
    "postcss-cli": "^11.0.0",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "rollup": "^4.9.1",
    "snyk": "^1.1266.0",
    "stylelint": "^16.1.0",
    "stylelint-config-standard": "^36.0.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "jest-canvas-mock"
    ],
    "collectCoverageFrom": [
      "js/**/*.js",
      "!js/**/*.test.js",
      "!js/**/*.spec.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/tests/**/*.spec.js"
    ],
    "moduleFileExtensions": [
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest"
    }
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2022": true,
      "jest": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "plugins": [
      "jest"
    ],
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "rules": {
      "no-console": "warn",
      "no-debugger": "error",
      "no-unused-vars": "error",
      "prefer-const": "error",
      "no-var": "error",
      "eqeqeq": "error",
      "curly": "error",
      "complexity": [
        "error",
        10
      ]
    },
    "globals": {
      "canvas": "readonly",
      "Audio": "readonly",
      "Image": "readonly"
    }
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard"
    ],
    "rules": {
      "color-no-invalid-hex": true,
      "font-family-no-duplicate-names": true,
      "function-calc-no-unspaced-operator": true,
      "unit-no-unknown": true,
      "property-no-unknown": true,
      "declaration-block-no-duplicate-properties": true,
      "selector-pseudo-class-no-unknown": true,
      "selector-pseudo-element-no-unknown": true,
      "selector-type-no-unknown": true,
      "media-feature-name-no-unknown": true,
      "comment-no-empty": true,
      "no-duplicate-at-import-rules": true,
      "no-empty-source": true,
      "no-extra-semicolons": true,
      "no-invalid-double-slash-comments": true
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "bracketSpacing": true,
    "arrowParens": "avoid",
    "endOfLine": "lf"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.css": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.{html,md,json}": [
      "prettier --write"
    ]
  },
  "bundlesize": [
    {
      "path": "dist/js/game.min.js",
      "maxSize": "50 kB"
    },
    {
      "path": "dist/css/styles.min.css",
      "maxSize": "10 kB"
    }
  ],
  "config": {
    "port": 8080,
    "host": "localhost",
    "ssl": false
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/spaceinvaders"
  },
  "private": false,
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  }
}